#ifndef __IOSTREAM_HPP__
#define __IOSTREAM_HPP__

namespace std {

enum Color {
  ColorBlack = 0,
  ColorBlue = 1,
  ColorGreen = 2,
  ColorCyan = 3,
  ColorRed = 4,
  ColorMagenta = 5,
  ColorBrown = 6,
  ColorLightGray = 7
};

void puts(const char * buff, Color color = ColorLightGray, bool bright = true);
void print(const char * buff,
           Color color = ColorLightGray,
           bool bright = true);

}

#endif
