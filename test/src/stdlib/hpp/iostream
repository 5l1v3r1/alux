#ifndef __IOSTREAM_HPP__
#define __IOSTREAM_HPP__

#include <cstdint>

namespace std {

enum Color {
  ColorBlack = 0,
  ColorBlue = 1,
  ColorGreen = 2,
  ColorCyan = 3,
  ColorRed = 4,
  ColorMagenta = 5,
  ColorBrown = 6,
  ColorLightGray = 7
};

void Puts(const char * buff, Color color = ColorLightGray, bool bright = true);
void Print(const char * buff,
           Color color = ColorLightGray,
           bool bright = true);

class OutStream {
public:
  virtual void PrintBuffer(const char * buf) = 0;
};

class ConsoleStream : public OutStream {
public:
  virtual void PrintBuffer(const char * buf);
};

class ErrorStream : public OutStream {
public:
  virtual void PrintBuffer(const char * buf);
};

OutStream & operator<<(OutStream & stream, const char * string);
OutStream & operator<<(OutStream & stream, uint8_t number);
OutStream & operator<<(OutStream & stream, uint16_t number);
OutStream & operator<<(OutStream & stream, uint32_t number);
OutStream & operator<<(OutStream & stream, uint64_t number);

extern ConsoleStream cout;
extern ErrorStream cerr;
extern const char * endl;

}

#endif
